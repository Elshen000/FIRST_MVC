
@model List<Product>

@{
    ViewData["Title"] = "Index";
}


<div class="col-lg-12 grid-margin stretch-card  " >
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Products</h4>
            <a asp-action="Create" class="btn btn-primary">Add</a>

            <div class="col-lg-12 " id="myProducts">
                <table class="table table-bordered">
                    <thead>
                        <tr>

                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Category
                            </th>

                            <th>
                                Actions
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Product item in Model)
                        {
                            <tr>
                                <td>
                                    <img style="border-radius:50%;width:150px;height:150px;" src="~/img/@item.Image" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.Category.Name
                                </td>


                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning">Detail</a>

                               </td>
                            </tr>

                        }


                    </tbody>
                </table>
            </div>   
        </div>
    </div>
</div>

<div class="my-3 d-flex justify-content-center">
    <nav aria-label="...">
        <ul class="pagination pagination-lg">
            @for (int i = 1; i <= ViewBag.PageCount; i++)
            {
                if (ViewBag.SelectedPage == i)
                {
                    <li class="page-item disabled ">
                        <a class="page-link" href="#" >@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item ">
                        <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }

            }
        </ul>
    </nav>

</div>

