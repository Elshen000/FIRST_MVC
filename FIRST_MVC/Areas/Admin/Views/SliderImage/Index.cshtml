@model List<SliderImage>
@{
    ViewData["Title"] = "Index";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider Images</h4>
            <a asp-action="Create" class="btn btn-primary">Add</a>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>

                            <th>
                                Image
                            </th>
                           
                            <th>
                                Actions
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (SliderImage item in Model)
                        {
                            <tr>
                                <td>
                                    <img style="border-radius:50%;width:150px;height:150px;object-fit:cover"  src="~/img/@item.Image" />
                                </td>
                               

                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                   
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

