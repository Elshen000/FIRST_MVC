@model List<Product>

<table class="table table-bordered">
    <thead>
        <tr>

            <th>
                Image
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>

            <th>
                Actions
            </th>

        </tr>
    </thead>
    <tbody>

        @foreach (Product item in Model)
        {
            <tr>
                <td>
                    <img style="border-radius:50%;width:150px;height:150px;object-fit:cover" src="~/img/@item.Image" />
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Category.Name
                </td>


                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning">Detail</a>

                </td>
            </tr>
        }


    </tbody>
</table>
}