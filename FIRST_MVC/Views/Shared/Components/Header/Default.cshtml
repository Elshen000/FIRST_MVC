                            <li class="nav-item" >
                                <a class="nav-link" asp-controller="Home" asp-action="Index" >Home</a>
                            </li>

                            <li class="nav-item shop-li">
                                <a class="nav-link" asp-controller="Shop" asp-action="Index">Products</a>

                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Contact" asp-action="Index" >Contact</a>

                            </li>
                           

                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link">@User.Identity.Name</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>
                               
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                            }

