    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4">Əlaqə</h2>
    <!--Section description-->
    

    <div class="row">

        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" name="contact-form"  method="POST">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input  id="name" name="name" class="form-control">
                            <label for="name" class="">Ad</label>
                        </div>
                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-md-6">
