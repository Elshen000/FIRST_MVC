
@model List<Product>

<main>
    <section id="shop-list-title">
        <div class="container py-4">
            <div class="row py-5">
                <div class="col-12">
                    <h1>Məhsullar</h1>
                </div>
            </div>
        </div>
    </section>


    <!-- PRODUCTS START -->

    <section id="products">
        <div class="container" style="padding:10px;">
            <div class="row" id="myProducts">
                @foreach (Product product in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 mt-3" style="width:25%;">
                        <div class="product-item product-item-small text-center" data-id="popular">
                            <div class="img">
                                <a  asp-action="Detail" asp-route-id="@product.Id">
                                    <img style="border-radius:40%;width:150px;height:150px;" src="~/img/@product.Image" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@product.Name</h6>
                            </div>
                            <div class="price">
                                <span class="text-black-50">Kart əlavə et</span>
                                <p> <span class="text-black-50">@product.Price</span></p>

                            </div>
                           

                        </div>
                    </div>

                }

            </div>
            <div class="row justify-content-center align-content text-center my-5">
                <input type="hidden" value="@ViewBag.ProductsCount" id="productsCount" />
                <a class="btn btn-outline-success" id="LoadMore">
                    Daha Çox
                </a>
            </div>



        </div>
    </section>


    <!-- PRODUCTS END -->

</main>